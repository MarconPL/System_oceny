@model system_oceny.Models.Komentarz

@{
    ViewBag.Title = "Edit";
}

<h2>Edytuj</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Firma</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.komentarzID)
        @Html.HiddenFor(model => model.FirmaId)
        @Html.HiddenFor(model => model.data)
        @Html.HiddenFor(model => model.autor)

        <div class="form-group">
            @Html.LabelFor(model => model.tresc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tresc)
                @Html.ValidationMessageFor(model => model.tresc)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "Details", "Firmy", new { id = Model.FirmaId }, null)
</div>