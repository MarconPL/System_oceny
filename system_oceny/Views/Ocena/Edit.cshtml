@model system_oceny.Models.Ocena

@{
    ViewBag.Title = "Edit";
}

<h2>Edytuj</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Firma</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ocenaId)
        @Html.HiddenFor(model => model.login)
        @Html.HiddenFor(model => model.FirmaId)

        <div class="form-group">
            @Html.LabelFor(model => model.ocenaG, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ocenaG)
                @Html.ValidationMessageFor(model => model.ocenaG)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ocena_jakosc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ocena_jakosc)
                @Html.ValidationMessageFor(model => model.ocena_jakosc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ocena_cena, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ocena_cena)
                @Html.ValidationMessageFor(model => model.ocena_cena)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ocena_czas, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ocena_czas)
                @Html.ValidationMessageFor(model => model.ocena_czas)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "Details", "Firmy", new { id = Model.FirmaId }, null)
</div>