@model IEnumerable<system_oceny.Models.Firma>

@{
    ViewBag.Title = "Index";
}

<h2>Baza Firm</h2>

@if (User.Identity.Name.Equals("Moderator"))
{
    <p>
        @Html.ActionLink("Dodaj firmę do bazy", "Create")
    </p>
}

<body>
    @using (Html.BeginForm())
    {
        <div>Firma: </div>
        <div>@Html.TextBox("NazwaZnajdz")</div>
        <div>Branza: </div>
        <div>@Html.TextBox("BranzaZnajdz")</div>
        <div>Miasto: </div>
        <div>@Html.TextBox("MiastoZnajdz")</div>
        <input type="submit" value="Szukaj" />
    }
</body>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branza) @Html.ActionLink("⇓", "Index", new { sortowanie = ViewBag.SortByBranza, BranzaZnajdz = ViewBag.BranzaZnajdz, NazwaZnajdz = ViewBag.NazwaZnajdz })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa) @Html.ActionLink("⇓", "Index", new { sortowanie = ViewBag.SortByNazwa, BranzaZnajdz = ViewBag.BranzaZnajdz, NazwaZnajdz = ViewBag.NazwaZnajdz })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.miasto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ocena) @Html.ActionLink("⇓", "Index", new { sortowanie = ViewBag.SortByOcena, BranzaZnajdz = ViewBag.BranzaZnajdz, NazwaZnajdz = ViewBag.NazwaZnajdz })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Branza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.miasto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ocena)
            </td>
            <td>
                @if (User.Identity.Name.Equals("Moderator"))
                {
                    @Html.ActionLink("Edytuj  ", "Edit", new { id = item.Id })
                    @Html.ActionLink("Usuń ", "Delete", new { id = item.Id })
                }  
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })  
                
            </td>
        </tr>
    }

</table>
